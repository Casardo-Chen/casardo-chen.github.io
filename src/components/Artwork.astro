---
const { title, img, desc, url, badge, tags, target = "_blank" } = Astro.props;
import "../styles/global.css";
import { Image } from "@astrojs/image/components";
---

<div class="md:w-1/3 w-full">
  <!-- <a href={url} target={target}> -->
    <div class="card bg-base-100 transition ease-in-out mx-6 my-6">
      <Image aspectRatio="1:1" width={1200} format="webp" src={img} alt={title} />
      <div >
        <p>{title}{badge && <div class="tag">{badge}</div>}</p>
        <!-- <div class="card-actions justify-end">
          {tags && tags.map((tag) => <div class="number-list">{tag}</div>)}
        </div> -->
      </div>
    </div>
  <!-- </a> -->
</div>

