---
const { title, img, desc, url, badge, tags, target = "_blank", venue, click = false, meng=""} = Astro.props;
import { Image } from "@astrojs/image/components";
---
<!-- class="rounded-lg bg-base-100 hover:shadow-xl transition ease-in-out hover:scale-[102%]" -->

<div
  class="bg-base-100 transition ease-in-out"
>
  {click ? <a href={url} target={target}>
    <div class="flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            aspectRatio="16:9"
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem]"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-2xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <p class="py-1 text-1xl">{venue}</p>
        <div class="card-actions justify-end">
          {
             tags &&
              tags.map((tag) => (
                <div class="badge badge-secondary mx-2">
                  <a href={`${tag[1]}`} target={target}>{tag[0]}</a>
                  
                </div>
              ))
          }
        </div>
      </div>
    </div>
  </a>
  :
  <div class="hero-content flex-col md:flex-row">
      {
        img && (
          <Image
            src={img}
            aspectRatio="16:9"
            width={750}
            format="webp"
            alt={title}
            class="max-w-full md:max-w-[13rem]"
          />
        )
      }
      <div class="grow w-full">
        <h1 class="text-xl font-bold">
          {title}
          {badge && <div class="badge badge-secondary mx-2">{badge}</div>}
        </h1>
        <p class="py-1 text-1xl">{desc}</p>
        <p class="py-1 text-1xl">{venue}</p>
        <div class="card-actions justify-end">
          {
             tags &&
              tags.map((tag) => (
                <div class="badge badge-secondary mx-2">
                  <a href={`${tag[1]}`} target={target}>{tag[0]}</a>
                </div>
              ))
          }
        </div>
      </div>
    </div>
  }
</div>
